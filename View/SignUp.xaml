<Page x:Class="BankingApp.View.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankingApp.View"
      mc:Ignorable="d"
      Title="SignUp" Height="450" Width="800">
<Grid >
        
        <Border CornerRadius="25"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="550" Height="340"
                Background="#20FFFFFF">
            
            
            <Grid Margin="10">
                <StackPanel>
                    <TextBlock Text="Sign Up"
                               FontSize="32"
                               Foreground="White"
                               FontWeight="Bold"
                               Opacity="0.9"
                               Margin="0 0 0 15"/>

                    

                    
                    <TextBox Background="Transparent" Foreground="Azure" Margin="5" Width="250" Height="20" HorizontalAlignment="Left" FontStyle="Italic" Text = "Name" 
                             GotFocus="TextBox_GotFocus"
                             LostFocus="Name_LostFocus">
                        
                    </TextBox>
                    <Rectangle Height="20"></Rectangle>
                    
                    <TextBox Background="Transparent" Foreground="Azure" Width="250" Height="20" Margin="5" HorizontalAlignment="Left" Text = "Password" 
                             GotFocus="TextBox_GotFocus"
                             LostFocus="Password_LostFocus">
                             
                             
                    </TextBox>  
                    
                    <TextBox Background="Transparent" Foreground="Azure" Width="250" Height="20" Margin="5" HorizontalAlignment="Left" Text = "Repeat Password" 
                             GotFocus="TextBox_GotFocus"
                             LostFocus="Repeat_Password_LostFocus">
                             
                    </TextBox>
                    
                   </StackPanel>
                
                
                <Rectangle Height="20"></Rectangle>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 -200">
                        
                    <Button Content="Sign Up" Style="{StaticResource GlowButton}"
                            Width="130"
                            Height="42"
                                
                            FontWeight="Bold"
                            Foreground="#101010"
                            Background="LawnGreen"
                    />
                        
                    <Button Content="Sign In" Style="{StaticResource GlowButton}" Click="SignInButton_Click"
                            Width="130"
                            Height="42"
                            Margin="12 0 0 0"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="#40FFFFFF"
                            BorderBrush="#50FFFFFF">
                            
                    </Button>

                        
                </StackPanel>
                
            </Grid>
            
            
            
        </Border>
        
        
    </Grid>
</Page>
