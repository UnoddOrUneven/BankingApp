<Page x:Class="BankingApp.View.UserDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankingApp.View"
      mc:Ignorable="d"
      Title="UserDetails" Background="{StaticResource RadialGradientBrushInner}">
    <Grid>
        <Border CornerRadius="25"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="10"
                Background="Transparent">

            <StackPanel Width="200" Height="400">


                <TextBlock x:Name="UserNameText"
                           FontSize="24"
                           FontStyle="Italic"
                           Foreground="White"
                           Margin="0 -20 0 20"
                           Text="ExampleName" />


            </StackPanel>


        </Border>

        <Border
            Visibility="Hidden"
            x:Name="AccountDetails"
            CornerRadius="25"
            Height="200"
            Width="350"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="10"
            Background="#47DEDEDE">

            <StackPanel>
                <TextBlock FontSize="30"
                           Foreground="Azure"
                           Text="Account balance:"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top" />

                <TextBlock FontSize="25"
                           Foreground="Beige"
                           Text="{Binding Balance, StringFormat={}${0}}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top" />

                <Button
                    Click="Hide_Click"
                    Style="{StaticResource GlowButton}"
                    Width="30"
                    Height="20"
                    Background="Gray"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0 90 10 0 "
                    >
                    Hide
                </Button>
                
                <Button
                    Click="CloseAccount_Click"
                    Style="{StaticResource GlowButton}"
                    Width="80"
                    Height="20"
                    Background="Red"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="10 -15 0 0 "
                >
                    Close account
                </Button>
                
                

            </StackPanel>


        </Border>


        <Border CornerRadius="25"
                Padding="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="10"
                Background="#20FFFFFF">

            <StackPanel Width="200" Height="400">
                <TextBlock
                    FontSize="24"
                    FontStyle="Italic"
                    Foreground="White"
                    Margin="0 -15 0 20"
                    Text="Accounts" />

                <Button Style="{StaticResource GlowButton}"
                        Width="200"
                        Height="30"
                        Content="Open a new account"
                        Foreground="Azure"
                        Click="OpenNewAccount_Click">

                </Button>
                
                

                <Border Height="1"
                        Margin="0 20 0 20"
                        Background="#40FFFFFF" />

                <ListBox x:Name="AccountsList"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         Height="260"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden">


                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Focusable" Value="False" />
                            <Setter Property="OverridesDefaultStyle" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>


                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border CornerRadius="10"
                                        Background="#30FFFFFF"
                                        Margin="0 0 0 10"
                                        Padding="10"
                                        Width="180"
                                        Height="50">


                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Balance, StringFormat={}${0}}" />
                                    </StackPanel>

                                </Border>
                                <Button Click="ViewAccount_Click"
                                        Width="20"
                                        Height="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0 5 5 0"
                                        Content="⚙"
                                        Style="{StaticResource GlowButton}" />
                            </Grid>

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>


        </Border>
    </Grid>
</Page>