<Page x:Class="BankingApp.View.AccountDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankingApp.View"
      mc:Ignorable="d"
      Title="AccountDetails" Background="{StaticResource RadialGradientBrushInner}">
    <Grid>
        <Border CornerRadius="25"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="10"
                Background="Transparent">

            <StackPanel Width="200" Height="400">


                <TextBlock x:Name="UserNameText"
                           FontSize="24"
                           FontStyle="Italic"
                           Foreground="White"
                           Margin="0 -15 0 20"
                           Text="ExampleName" />


            </StackPanel>


        </Border>


        <Border CornerRadius="25"
                Padding="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="10"
                Background="#20FFFFFF">

            <StackPanel Width="200" Height="400">
                <TextBlock
                    FontSize="24"
                    FontStyle="Italic"
                    Foreground="White"
                    Margin="0 -15 0 20"
                    Text="Accounts" />
                <ListBox x:Name="AccountsList"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="10"
                                    Background="#30FFFFFF"
                                    Margin="0 0 0 10"
                                    Padding="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding AccountNumber}"/>
                                    <TextBlock Text="{Binding Balance}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>


        </Border>


    </Grid>


</Page>