<Page x:Class="BankingApp.View.Transfer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankingApp.View"
      xmlns:helpers="clr-namespace:BankingApp.Helpers">


    <Grid Background="{StaticResource RadialGradientBrushInner}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- From Panel -->
        <Border Grid.Column="0" Grid.Row="0"
                CornerRadius="15" Background="#30FFFFFF"
                Padding="20" Margin="10"
                Height="300">

            <StackPanel>
                <TextBlock Text="From" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0 0 0  0" />
                <TextBlock></TextBlock>
                <ComboBox x:Name="FromAccountComboBox"
                          SelectionChanged="ComboBox_SelectionChanged"
                          Width="150"
                          Height="30"
                          Background="Khaki"
                          Foreground="Black"
                          Text="Select account"
                          Margin="0 0 0 0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Foreground="Black" />
                                <TextBlock Text="{Binding Balance, StringFormat={}(${0})}" Foreground="Black" />
                            </StackPanel>

                        </DataTemplate>

                    </ComboBox.ItemTemplate>

                </ComboBox>


            </StackPanel>
        </Border>

        <!-- Swap Button -->
        <Button Grid.Column="1" Grid.Row="1" Width="50" Height="50"
                Content="⇄" FontSize="24"
                Style="{StaticResource GlowButtonWhite}"
                BorderThickness="0"
                Background="Transparent" Foreground="White"
                Click="SwapAccounts_OnClick" HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0 -255 0 0 " />

        <!-- To Panel -->
        <Border Grid.Column="2" Grid.Row="0"
                CornerRadius="15" Background="#30FFFFFF"
                Padding="20" Margin="10"
                Height="300">
            <StackPanel>
                <TextBlock Text="To" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0 0 0 0" />
                <TextBlock Text="Your accounts" Foreground="Azure"/>
                <ComboBox x:Name="ToAccountComboBox"
                          SelectionChanged="ComboBox_SelectionChanged"
                          GotFocus="ToAccountComboBox_OnGotFocus"
                          Width="150"
                          Height="30"
                          Background="Transparent"
                          Foreground="Transparent"

                          Text="Select account">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Foreground="Black" />
                                <TextBlock Text="{Binding Balance, StringFormat={}(${0})}" Foreground="Black" />
                            </StackPanel>
                        </DataTemplate>

                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <Border Height="1"
                        Margin="0 20 0 20"
                        Background="#40FFFFFF" />
                <TextBlock Text="All users" Foreground="Azure"/>
                
                <Grid>
                <TextBox Name = "FindUsersTextBox" Background="Transparent"
                         Padding="0 0 20 0 "
                         TextChanged="FindUsersTextBox_OnTextChanged"
                         GotFocus="FindUsersTextBox_OnGotFocus"
                         LostFocus="FindUsersTextBox_OnLostFocus"
                         
                         Foreground="Azure"
                         
                         ></TextBox>
                <Button 
                        Name = "AnotherUsersClearSearchButton"
                        Click="AllUsersClearSearchButton_OnClick"
                        Width="7" Height="13"
                        Style="{StaticResource GlowButtonWhite}"
                        
                        Content="❌"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0"
                        FontSize="5"
                        HorizontalAlignment="Right"
                        Margin="0 0 2 0"
                        />
                </Grid>
                <TextBlock
                    x:Name = "MessageTextBlock"
                    Text="Example error"
                    Visibility="Hidden"
                    FontSize="12"
                    Foreground="Red"
                    />
                
            </StackPanel>
        </Border>

        <!-- Amount Panel -->
        <Button
            Click="GoBackButton_OnClick"
            Style="{StaticResource GlowButtonWhite}"
            BorderThickness="0"
            Foreground="White"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10 10 0 0 "
            Content="🔙"
            Background="Transparent" />

        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="0 20 0 100" HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Amount" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0 0 0 5"
                       HorizontalAlignment="Center" />
            
            <Grid>
            <TextBlock Text="$" FontSize="16" FontWeight="Bold" Foreground="White" Margin="5 0 0 0"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="AmountTextBox" Width="200" Height="30" FontSize="16" HorizontalAlignment="Center"
                     Background="Transparent" Foreground="Azure"
                     Padding="20 0 5 0"
                     helpers:NumericTextBoxBehavior.IsNumeric="True" />
            </Grid>
            

            <Button x:Name="TransferButton"
                    IsEnabled="False"
                    Content="Transfer" Width="120" Height="35" Margin="0 10 0 0"
                    Click="TransferButton_Click"
                    Style="{StaticResource GlowButtonTransparentWhiteBorder}" FontWeight="Bold"
                    HorizontalAlignment="Center" />


        </StackPanel>


    </Grid>

</Page>