<Page x:Class="BankingApp.View.LoanContract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankingApp.View"
      mc:Ignorable="d">

    <Grid>
        <!-- Background parchment style -->
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.6" RadiusY="0.6">
                <GradientStop Color="#FFF8E1D0" Offset="0" />
                <GradientStop Color="#FFD9C7A3" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Decorative border -->
        <Border BorderBrush="#320000" BorderThickness="5" CornerRadius="20" Margin="10">
            <Grid Margin="20">
                <!-- Title -->
                <TextBlock Text="Infernal Loan Contract"
                           FontFamily="Old English Text MT"
                           FontSize="36"
                           Foreground="DarkRed"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40" />

                <!-- Contract content -->

                <TextBlock
                    Name="LoanAmountTextBlock"
                    Text="$1000"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="40"
                    Foreground="#FF1318"
                    Margin="0 40 0 0 " />

                <ScrollViewer Margin="0,100,0,120" VerticalScrollBarVisibility="Disabled">
                    <TextBlock TextWrapping="Wrap" FontFamily="Georgia" FontSize="16" Foreground="Black"
                               Margin="0 0 0 60">
                        By signing this contract, the undersigned acknowledges and consents to the terms of the infernal loan.
                    </TextBlock>
                </ScrollViewer>

                <!-- Signature area -->
                <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,20">


                    <TextBlock Name="Agreement" Text="I, Default_Name, agree." FontFamily="Georgia" FontSize="18"
                               Foreground="DarkRed" Margin="0,400,0,15" HorizontalAlignment="Center" />

                    <TextBlock Text="Sign here:" FontFamily="Georgia" FontSize="15" Foreground="DarkRed"
                               Margin="0,0,0,-10" HorizontalAlignment="Center" />

                    <InkCanvas Name="SignatureCanvas" 
                               Background="#FFFFF8E1"
                               Margin="0,0,0,0"
                               Height="50" Width="150"
                               MouseMove="SignatureCanvas_OnMouseMove"/>
                    <Border Width="150" Height="2" Background="Black" CornerRadius="19" />

                    <Button
                        Name = "SaveSignatureButton"
                        IsEnabled="False"
                        Content="Save Signature"
                        Width="150"
                        HorizontalAlignment="Right"
                        Style="{StaticResource GlowButtonRed}"
                        Background="Transparent"
                        Foreground="DarkRed"
                        BorderBrush="Black"
                        BorderThickness="10"
                        Click="SaveSignatureButton_OnClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>