<Page x:Class="BankingApp.View.LoanContract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankingApp.View"
      mc:Ignorable="d"
      >

    <Grid>
        <!-- Background parchment style -->
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.6" RadiusY="0.6">
                <GradientStop Color="#FFF8E1D0" Offset="0"/>
                <GradientStop Color="#FFD9C7A3" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Decorative border -->
        <Border BorderBrush="DarkRed" BorderThickness="5" CornerRadius="20" Margin="10">
            <Grid Margin="20">
                <!-- Title -->
                <TextBlock Text="Infernal Loan Contract" 
                           FontFamily="Old English Text MT" 
                           FontSize="36" 
                           Foreground="DarkRed" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
                
                <!-- Contract content -->
                <ScrollViewer Margin="0,80,0,120" VerticalScrollBarVisibility="Disabled">
                    <TextBlock  TextWrapping="Wrap" FontFamily="Georgia" FontSize="16" Foreground="Black" Margin="0 0 0 60">
                        By signing this contract, the undersigned acknowledges and consents to the terms of the infernal loan. 
                    </TextBlock>
                </ScrollViewer>

                <!-- Signature area -->
                <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,20">
                    
                    <TextBlock Name = "Agreement" Text="" FontFamily="Georgia" FontSize="18" Foreground="DarkRed" Margin="0,400,0,5" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sign here:" FontFamily="Georgia" FontSize="15" Foreground="DarkRed" Margin="0,0,0,0" HorizontalAlignment="Center"/>
                     
                    <InkCanvas Name="SignatureCanvas"  Background="#FFFFF8E1" Margin="0,0,0,0"  Height="100"  Width="150"/>
                    
                    <Button Content="Save Signature" 
                            Width="150" 
                            HorizontalAlignment="Right"  
                            Style="{StaticResource GlowButtonRed}" 
                            Background="Transparent"
                            Foreground="DarkRed"
                            BorderBrush="Black"
                            BorderThickness="10"
                            
                            />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
